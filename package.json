{
  "name": "ead-backend",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "/",
  "scripts": {
    "build": "yarn tsc -p tsconfig.prod.json",
    "build-dist": "./node_modules/.bin/ts-node ./pre-build/build.ts",
    "start": "node -r module-alias/register ./dist --node_env=development",
    "dev": "nodemon",
    "test": "yarn jest --clearCache && jest --verbose --runInBand",
    "embed": "NODE_OPTIONS='--max-old-space-size=8192' ts-node --files -r tsconfig-paths/register ./src/embed.ts",
    "iyanu": "NODE_OPTIONS='--max-old-space-size=8192' ts-node --files -r tsconfig-paths/register ./src/iyanu.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src/index.ts"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@server": "dist/server",
    "@database": "dist/database",
    "@utils": "dist/utils",
    "@routes": "dist/routes",
    "@models": "dist/models",
    "@services": "dist/services",
    "@middlewares": "dist/middlewares",
    "@test-setup": "dist/test-setup"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cloudinary": "^2.7.0",
    "command-line-args": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "i18n": "^0.15.1",
    "ioredis": "^5.6.1",
    "joi": "^17.6.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "puppeteer": "^24.10.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^27.5.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.25",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/supertest": "^2.0.12",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.3"
  }
}
